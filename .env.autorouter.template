# Environment Variable Overrides for AutoRouter Configuration
# Copy this file to .env and modify values as needed for your environment

# Production environment with higher thresholds
AutoRouter__GraphApiThresholds__MaxSizeBytes=1073741824000  # 1TB
AutoRouter__GraphApiThresholds__MaxItemCount=2000000       # 2M items
AutoRouter__GraphApiThresholds__Description="Production environment with 1TB and 2M item limits"

# Confidence levels for production (more conservative)
AutoRouter__RoutingConfidence__HighConfidence=95
AutoRouter__RoutingConfidence__MediumConfidence=88
AutoRouter__RoutingConfidence__LowConfidence=75

# For Azure deployment with Key Vault integration
AutoRouter__GraphApiThresholds__MaxSizeBytes=${AUTOROUTER_MAX_SIZE_BYTES}
AutoRouter__GraphApiThresholds__MaxItemCount=${AUTOROUTER_MAX_ITEM_COUNT}

# For Docker container deployment
# Example docker run command:
# docker run -e AutoRouter__GraphApiThresholds__MaxSizeBytes=214748364800 \
#           -e AutoRouter__GraphApiThresholds__MaxItemCount=1000000 \
#           my-ediscovery-image

# For Kubernetes deployment (values.yaml)
# env:
#   - name: AutoRouter__GraphApiThresholds__MaxSizeBytes
#     value: "214748364800"  # 200GB
#   - name: AutoRouter__GraphApiThresholds__MaxItemCount
#     value: "1000000"       # 1M items

